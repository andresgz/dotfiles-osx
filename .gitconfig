[user]
  name = Juan Obando
[alias]
  co = checkout
  ci = commit
  di = diff
  st = status -s
  up = pull
  l = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[core]
  # global gitignore file
  excludesfile = ~/.gitignore
[color]
  ui = always
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = green
  changed = yellow
  untracked = red
[merge]
  log = true
[push]
  # push/pull changes to the current branch
  default = current
